{
  "root": true,
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "standard-with-typescript",
    "plugin:jest/recommended",
    "plugin:jest/style",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "jest", "no-relative-import-paths", "unused-imports"],
  "rules": {
    // 同一ディレクトリ以外はimportの絶対パスを強制
    "no-relative-import-paths/no-relative-import-paths": [
      "error",
      {
        "allowSameFolder": true,
        "rootDir": "src",
        "prefix": "@"
      }
    ],
    // 未使用のimportをエラーにする
    "unused-imports/no-unused-imports": "error",
    "unused-imports/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "react/display-name": "off",
    "@next/next/no-img-element": "off",
    "no-use-before-define": "off",
    "no-restricted-syntax": ["error", "TSEnumDeclaration"],
    "react-hooks/exhaustive-deps": "error",
    "react-hooks/rules-of-hooks": "error",

    "@typescript-eslint/explicit-function-return-type": "off",
    "@typescript-eslint/explicit-module-boundary-types": "off",
    "@typescript-eslint/prefer-interface": "off",
    "@typescript-eslint/no-extra-semi": "error",
    "@typescript-eslint/consistent-type-definitions": ["warn", "type"],
    "@typescript-eslint/strict-boolean-expressions": "error",
    "@typescript-eslint/return-await": "off",

    "import/order": [
      "error",
      {
        "groups": [
          "builtin", // 組み込みモジュール
          "external", // npm i したパッケージ
          "internal", // 自作モジュール
          "parent", // 親階層のファイル
          "sibling", // 同階層のファイル
          "index", // 同階層の index ファイル
          "type" // 型定義ファイル
        ],
        "pathGroups": [
          {
            "pattern": "{react,react-dom/**,react-router-dom}",
            "group": "builtin",
            "position": "before"
          },
          {
            "pattern": "@src/**",
            "group": "parent",
            "position": "before"
          }
        ],
        "pathGroupsExcludedImportTypes": ["builtin"],
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ],

    // v6 で strict に移動したルールを有効化
    "@typescript-eslint/no-non-null-assertion": "warn",
    // v6 で stylistic に移動したルールを有効化
    "no-empty-function": "off",
    "@typescript-eslint/no-empty-function": "error",
    "@typescript-eslint/adjacent-overload-signatures": "error",
    "@typescript-eslint/no-empty-interface": "error",
    "@typescript-eslint/no-inferrable-types": "error",
    "@typescript-eslint/prefer-namespace-keyword": "error"
  },
  "overrides": [
    {
      "files": ["src/**/*"],
      "rules": {
        "import/no-internal-modules": [
          "error",
          {
            "forbid": ["@/component/**/*"]
          }
        ]
      }
    },
    {
      "files": ["__tests__/**/*"],
      "rules": {
        "import/no-internal-modules": "off"
      }
    }
  ]
}
